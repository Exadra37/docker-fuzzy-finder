#!/bin/bash

########################################################################################################################
# Defaults
########################################################################################################################

    HOST_DIR="${PWD}"
    TAG="latest"


########################################################################################################################
# Input
########################################################################################################################

    for input in "${@}"
        do
            case "${input}" in

                --host-dir | --hd)
                    HOST_DIR="${2}"
                    shift 2
                    ;;

                --tag)
                    TAG="${2}"
                    shift 2
                    ;;
            esac
    done


########################################################################################################################
# Execution
########################################################################################################################

    sudo docker run \
        --rm \
        -it \
        --volume "${HOST_DIR}":/fuzzy-finder \
        exadra37/fuzzy-finder:"${TAG}" "${@}"
