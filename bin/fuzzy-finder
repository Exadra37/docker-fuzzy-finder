#!/bin/bash

########################################################################################################################
# Defaults
########################################################################################################################

    HOST_DIR="${PWD}"


########################################################################################################################
# Input
########################################################################################################################

    for input in "${@}"
        do
            case "${input}" in

                --host-dir | --hd)
                    HOST_DIR="${2}"
                    shift 2
                    ;;

            esac
    done


########################################################################################################################
# Execution
########################################################################################################################

    sudo docker run \
        --rm \
        -it \
        --volume "${HOST_DIR}":/fuzzy-finder \
        exadra37/fuzzy-finder "${@}"
